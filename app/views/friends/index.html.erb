<% if user_signed_in? %>

  <% content_for :title, "Friends" %>

  <h2>Friends</h2>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twiter</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <div id="friends">
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <tr>
              <td><%= link_to friend.first_name+ ' ' + friend.last_name, friend%></td>
              <td><%=friend.email%></td>
              <td><%=friend.phone%></td>
              <td><%=friend.twitter%></td>
              <td><%= button_to "Delete", friend, method: :delete, class:'btn btn-outline-danger btn-sm' %></td>
            </tr>
          <% end %>
        <% end %>
      </div>
    </tbody>
  </table>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>
  <h1>Hello World</h1>
  This is my first rails webpage
<% end %>